<Page x:Class="SystemOptimizer.Views.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:appearance="clr-namespace:Wpf.Ui.Appearance;assembly=Wpf.Ui"
      xmlns:vm="clr-namespace:SystemOptimizer.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Configurações">

    <ui:DynamicScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            
            <TextBlock Text="Geral" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,16"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

            <ui:CardControl Icon="DarkTheme24" Margin="0,0,0,12">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Aparência" FontWeight="Medium"/>
                        <TextBlock Text="Escolha o tema da aplicação" 
                                   FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </ui:CardControl.Header>
                <StackPanel Orientation="Horizontal">
                    <Button Content="Claro" Margin="0,0,8,0"
                            Command="{Binding ChangeThemeCommand}"
                            CommandParameter="{x:Static appearance:ApplicationTheme.Light}" />
                    
                    <Button Content="Escuro" Margin="0,0,8,0"
                            Command="{Binding ChangeThemeCommand}"
                            CommandParameter="{x:Static appearance:ApplicationTheme.Dark}" />
                    
                    <Button Content="Alto Contraste" 
                            Command="{Binding ChangeThemeCommand}"
                            CommandParameter="{x:Static appearance:ApplicationTheme.HighContrast}" />
                </StackPanel>
            </ui:CardControl>

            <ui:CardControl Icon="LocalLanguage24">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Idioma" FontWeight="Medium"/>
                        <TextBlock Text="Selecione o idioma da interface" 
                                   FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </ui:CardControl.Header>
                <ComboBox MinWidth="150" 
                          ItemsSource="{Binding Languages}" 
                          SelectedItem="{Binding CurrentLanguage}"
                          SelectedIndex="0"/>
            </ui:CardControl>

        </StackPanel>
    </ui:DynamicScrollViewer>
</Page>
