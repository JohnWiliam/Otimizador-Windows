<Page x:Class="SystemOptimizer.Views.Pages.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:SystemOptimizer.ViewModels"
      xmlns:models="clr-namespace:SystemOptimizer.Models"
      xmlns:p="clr-namespace:SystemOptimizer.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="SearchPage"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="{x:Static p:Resources.Search_Title}"
                           FontSize="26"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

                <TextBlock Text="{x:Static p:Resources.Search_Subtitle}"
                           FontSize="13"
                           Margin="0,4,0,0"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
            </StackPanel>

            <ui:Button Grid.Column="1"
                       Appearance="Secondary"
                       Icon="{ui:SymbolIcon ArrowSync24}"
                       Command="{Binding DataContext.RestartExplorerCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                       Content="{x:Static p:Resources.Btn_RestartExplorer}"
                       ToolTip="{x:Static p:Resources.Btn_RestartExplorer}"
                       IsEnabled="{Binding DataContext.IsBusy, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource InverseBoolConverter}}"
                       VerticalAlignment="Top" />
        </Grid>

        <ui:DynamicScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding SearchTweaks}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:TweakViewModel}">
                        <ui:Card Margin="0,0,0,8" Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                    <TextBlock Text="{Binding Title}" 
                                               FontSize="16" 
                                               FontWeight="Medium" 
                                               Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding Description}" 
                                               FontSize="13" 
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}" 
                                               TextWrapping="Wrap"/>
                                     
                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                        <ui:SymbolIcon Symbol="{Binding StatusIcon}" 
                                                       FontSize="16" 
                                                       Foreground="{Binding StatusColor}" 
                                                       Margin="0,0,6,0"/>
                                        <TextBlock Text="{Binding StatusText}" 
                                                   Foreground="{Binding StatusColor}" 
                                                   FontSize="12" 
                                                   VerticalAlignment="Center" 
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                    <ui:Button Appearance="Primary" 
                                               Icon="{ui:SymbolIcon Checkmark24}"
                                               Command="{Binding DataContext.ApplySingleCommand, RelativeSource={RelativeSource AncestorType=Page}}" 
                                               CommandParameter="{Binding Id}"
                                               ToolTip="Aplicar esta otimização"
                                               Margin="0,0,8,0"/>

                                    <ui:Button Appearance="Secondary" 
                                               Icon="{ui:SymbolIcon ArrowUndo24}"
                                               Command="{Binding DataContext.RevertSingleCommand, RelativeSource={RelativeSource AncestorType=Page}}" 
                                               CommandParameter="{Binding Id}"
                                               ToolTip="Restaurar padrão do Windows"/>
                                </StackPanel>
                            </Grid>
                        </ui:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ui:DynamicScrollViewer>
    </Grid>
</Page>
