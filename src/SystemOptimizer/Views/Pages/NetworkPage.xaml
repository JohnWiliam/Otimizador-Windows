<Page x:Class="SystemOptimizer.Views.Pages.NetworkPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:SystemOptimizer.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="NetworkPage">

    <Grid Margin="24,12,24,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Otimizações de Rede" 
                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                   FontSize="26" 
                   FontWeight="SemiBold" 
                   Margin="0,0,0,16" />

        <ui:DynamicScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,12,0">
            <ItemsControl ItemsSource="{Binding NetworkTweaks}" 
                          ItemTemplate="{StaticResource TweakItemTemplate}" />
        </ui:DynamicScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <ui:Button Content="Restaurar Padrões" Command="{Binding RevertSelectedCommand}" CommandParameter="Network" Appearance="Secondary" Icon="ArrowUndo24" Margin="0,0,12,0" Width="160" />
            <ui:Button Content="Aplicar Otimizações" Command="{Binding ApplySelectedCommand}" CommandParameter="Network" Appearance="Primary" Icon="Checkmark24" Width="180" />
        </StackPanel>
    </Grid>
</Page>
