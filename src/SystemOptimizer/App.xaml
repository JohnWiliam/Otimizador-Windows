<Application x:Class="SystemOptimizer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SystemOptimizer"
             xmlns:helpers="clr-namespace:SystemOptimizer.Helpers"
             xmlns:vm="clr-namespace:SystemOptimizer.ViewModels"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
                
                <ResourceDictionary>
                     <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
                     <helpers:InverseBoolConverter x:Key="InverseBoolConverter" />
                     <helpers:MathConverter x:Key="MathConverter" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate x:Key="TweakItemTemplate" DataType="{x:Type vm:TweakViewModel}">
                <ui:Card Margin="0,0,5,5" Padding="12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="0,0,12,0" />

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="13" />
                            <TextBlock Text="{Binding Description}" Foreground="#666666" FontSize="11" Margin="0,1,0,0" TextWrapping="Wrap" />
                        </StackPanel>

                        <Border Grid.Column="2" Background="Transparent" Padding="8,4" CornerRadius="4" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <ui:SymbolIcon Symbol="{Binding StatusIcon}" 
                                               FontSize="18" 
                                               Foreground="{Binding StatusColor}" 
                                               Margin="0,0,6,0" 
                                               Filled="True"/>
                                
                                <TextBlock Text="{Binding StatusText}" 
                                           Foreground="#757575" 
                                           FontSize="12" 
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </Border>
                    </Grid>
                </ui:Card>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
