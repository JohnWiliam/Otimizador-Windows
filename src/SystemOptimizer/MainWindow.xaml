<ui:FluentWindow x:Class="SystemOptimizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:SystemOptimizer"
        xmlns:vm="clr-namespace:SystemOptimizer.ViewModels"
        xmlns:pages="clr-namespace:SystemOptimizer.Views.Pages"
        xmlns:helpers="clr-namespace:SystemOptimizer.Helpers"
        xmlns:p="clr-namespace:SystemOptimizer.Properties"
        mc:Ignorable="d"
        Title="Otimizador de Sistema"
        Height="700" Width="1000"
        MinWidth="700" MinHeight="500"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        FontSize="14"
        Icon="pack://application:,,,/Assets/icon.ico">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
       
        <ui:TitleBar Grid.Row="0" Title="{Binding ApplicationTitle}" />

        <ui:NavigationView x:Name="RootNavigation"
                           Grid.Row="1"
                           PaneDisplayMode="Left"
                           IsPaneOpen="True"
                           OpenPaneLength="220"
                           ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="{x:Static p:Resources.Nav_Privacy}" TargetPageType="{x:Type pages:PrivacyPage}">
                     <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Shield24" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                
                <ui:NavigationViewItem Content="{x:Static p:Resources.Nav_Performance}" TargetPageType="{x:Type pages:PerformancePage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Gauge24" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                 
                <ui:NavigationViewItem Content="{x:Static p:Resources.Nav_Network}" TargetPageType="{x:Type pages:NetworkPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Globe24" />
                    </ui:NavigationViewItem.Icon>
                 </ui:NavigationViewItem>
                 
                <ui:NavigationViewItem Content="{x:Static p:Resources.Nav_Security}" TargetPageType="{x:Type pages:SecurityPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="LockClosed24" />
                     </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem Content="{x:Static p:Resources.Nav_Search}" TargetPageType="{x:Type pages:SearchPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Search24" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                
                <ui:NavigationViewItem Content="{x:Static p:Resources.Nav_Visual}" TargetPageType="{x:Type pages:AppearancePage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="PaintBrush24" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem Content="{x:Static p:Resources.Nav_Tweaks}" TargetPageType="{x:Type pages:TweaksPage}">
                     <ui:NavigationViewItem.Icon>
                         <ui:SymbolIcon Symbol="WrenchScrewdriver24" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                
                <ui:NavigationViewItem Content="{x:Static p:Resources.Nav_Cleanup}" TargetPageType="{x:Type pages:CleanupPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Broom24" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>

            <ui:NavigationView.FooterMenuItems>
                 <ui:NavigationViewItem Content="{x:Static p:Resources.Settings_Title}" TargetPageType="{x:Type pages:SettingsPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Settings24" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.FooterMenuItems>

            <ui:NavigationView.ContentOverlay>
                 <ui:SnackbarPresenter x:Name="SnackbarPresenter" />
            </ui:NavigationView.ContentOverlay>

            <Frame x:Name="RootFrame" NavigationUIVisibility="Hidden" />

        </ui:NavigationView>

        <Border Grid.Row="0" Grid.RowSpan="2" 
                Panel.ZIndex="1000"
                CornerRadius="8" 
                ClipToBounds="True">
            <ContentPresenter x:Name="RootContentDialogPresenter" />
        </Border>
        
        <Grid Grid.Row="0" Grid.RowSpan="2" 
              Panel.ZIndex="1002"
              Background="{DynamicResource ApplicationBackgroundBrush}"
              Visibility="{Binding IsInitializing, Converter={StaticResource BooleanToVisibilityConverter}}"
              d:Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ui:ProgressRing IsIndeterminate="True" Width="50" Height="50" />
                <TextBlock Text="{x:Static p:Resources.Status_Loading}"
                           Margin="0,15,0,0" 
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
            </StackPanel>
        </Grid>

    </Grid>
</ui:FluentWindow>
